<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >

    <LinearLayout
        android:background="@drawable/nc_mine_bg"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="200dp">
<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/ib_setting"
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:background="@drawable/nc_icon_setting"
        android:layout_height="50dp" />
    <ImageButton
        android:layout_alignParentRight="true"
        android:id="@+id/ib_mess"
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:background="@drawable/nc_icon_mine_im"
        android:layout_height="50dp" />
</RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_gravity="center"
                android:src="@drawable/nc_icon_member"
                android:id="@+id/ib_touxiang"
                android:scaleType="fitXY"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <TextView
                android:text="点击登录"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:id="@+id/tv_mine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:src="@drawable/nc_icon_fav_on"
            android:layout_width="30dp"
            android:layout_height="30dp" />

         <TextView
             android:text="我的收藏"
             android:layout_margin="5dp"
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/ib_fav"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:background="#ffffff"
            android:src="@drawable/nc_icon_arrow_right"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#dddddd"
        android:layout_height="0.5dp"/>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:src="@drawable/nc_icon_my_order"
        android:layout_width="20dp"
        android:layout_height="20dp" />
    <TextView
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="我的订单"
        android:layout_margin="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/ib_order_more"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:background="#ffffff"
        android:src="@drawable/nc_icon_arrow_right"
        android:layout_width="20dp"
        android:layout_height="20dp" />

</LinearLayout>
    <View
        android:background="#dddddd"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/nc_icon_mine_order_1"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:text="待付款"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/nc_icon_mine_order_2"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:text="待收货"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/nc_icon_mine_order_3"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:text="待发货"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/nc_icon_mine_order_4"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:text="待评价"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/nc_icon_mine_order_5"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="待退款"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>




    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#efeded"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/nc_icon_my_address"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="收货地址管理"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/ib_address"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:background="#ffffff"
            android:src="@drawable/nc_icon_arrow_right"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#efeded"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/nc_icon_setting2"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="用户设置"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/ib_set"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:background="#ffffff"
            android:src="@drawable/nc_icon_arrow_right"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#efeded"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/nc_icon_setting3"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="App下载二维码"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/ib_app_info"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:background="#ffffff"
            android:src="@drawable/nc_icon_arrow_right"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#efeded"/>



</LinearLayout>
